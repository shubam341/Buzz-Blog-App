<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
    <style>
        /* General Styles */
        body {
            background: white;
            font-family: 'Arial', sans-serif;
            color: #333;
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }

        /* Container for the blog content */
        .blog-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
            background: white;
        }

        /* Blog Title */
        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 20px;
            text-align: left;
        }

        /* Blog Cover Image */
        .cover-image {
            width: 200px; /* Smaller size */
            height: auto;
            border-radius: 8px;
            margin-right: 20px;
            float: left; /* Align to the left */
        }

        /* Blog Body */
        .blog-body {
            font-size: 1.1rem;
            color: #444;
            line-height: 1.8;
            text-align: justify;
            clear: both; /* Clear float */
        }

        .blog-body pre {
            white-space: pre-wrap;
            font-family: 'Courier New', Courier, monospace;
            background: #f9f9f9;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 1rem;
            line-height: 1.5;
        }

        /* Author Info */
        .author-info {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 30px;
            margin-bottom: 40px;
        }

        .author-info img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            border: 2px solid #3498db;
        }

        .author-info span {
            font-size: 1.2rem;
            font-weight: bold;
            color: #2c3e50;
        }

        /* Comment Section (Full Width) */
        .comments-section {
            width: 100%; /* Full width */
            margin: 40px 0;
            padding: 40px 20px;
            background: #f9f9f9; /* Light gray background */
        }

        .comments-section .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .comments-section h2 {
            font-size: 2rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Comment Input Box */
        .comment-box {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .comment-box input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            outline: none;
            background: white;
        }

        .comment-box input:focus {
            border-color: #3498db;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
        }

        .comment-box button {
            padding: 10px 20px;
            background: #3498db;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .comment-box button:hover {
            background: #2980b9;
        }

        /* Login Message */
        .login-message {
            text-align: center;
            color: #e74c3c;
            font-weight: bold;
            margin-bottom: 20px;
        }

        /* Individual Comment */
        .comment {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
            padding: 15px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .comment img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 2px solid #3498db;
        }

        .comment-content {
            flex: 1;
        }

        .comment-author {
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .comment-text {
            font-size: 1rem;
            color: #555;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .blog-container {
                padding: 20px 10px;
            }

            h1 {
                font-size: 2rem;
            }

            .cover-image {
                width: 100%;
                float: none;
                margin-right: 0;
                margin-bottom: 20px;
            }

            .comment-box {
                flex-direction: column;
            }

            .comment-box button {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <!-- Blog Section -->
    <div class="blog-container">
        <!-- Blog Title -->
        <h1><%= blog.title %></h1>

        <!-- Blog Cover Image -->
        <img src="<%= blog.coverImageURL %>" class="cover-image" alt="Blog Cover Image">

        <!-- Blog Body -->
        <div class="blog-body">
            <pre><%= blog.body %></pre>
        </div>

        <!-- Author Info -->
        <div class="author-info">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="Author Profile Image">
            <span><%= blog.createdBy.fullName %></span>
        </div>
    </div>

    <!-- Comment Section (Full Width) -->
    <div class="comments-section">
        <div class="container">
            <h2>Comments (<%= comments.length %>)</h2>

            <!-- Comment Input Box -->
            <% if (locals.user) { %>
                <div class="comment-box">
                    <form action="/blog/comment/<%= blog._id %>" method="post">
                        <input type="text" name="content" class="form-control" placeholder="Enter your comment">
                        <button type="submit">Add Comment</button>
                    </form>
                </div>
            <% } else { %>
                <p class="login-message">You must be logged in to comment.</p>
            <% } %>

            <!-- Comments List -->
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div class="comment">
                        <img src="<%= comment.createdBy.profileImageURL ? comment.createdBy.profileImageURL : '/images/default-avatar.png' %>" alt="User Avatar" onerror="this.onerror=null; this.src='/images/default-avatar.png';">
                        <div class="comment-content">
                            <div class="comment-author"><%= comment.createdBy.fullName %></div>
                            <div class="comment-text"><%= comment.content %></div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>
</html>